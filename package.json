{
  "name": "markugen",
  "version": "2.0.2",
  "description": "Markdown to HTML/PDF static site generation tool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/falkorclark/markugen.git"
  },
  "homepage": "https://falkorclark.com/markugen/index.html",
  "bin": {
    "markugen": "lib/bin/cli.js"
  },
  "module": "./lib/markugen.js",
  "main": "./lib/markugen.js",
  "types": "./lib/markugen.d.ts",
  "exports": {
    ".": "./lib/markugen.js",
    "./lib/*.js": "./lib/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "templates",
    "docs",
    "markdown"
  ],
  "type": "commonjs",
  "author": "Falkor Clark <falkorclark@gmail.com>",
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "md",
    "markdown",
    "html",
    "marked",
    "remark",
    "rehype",
    "documentation",
    "vuepress",
    "vue",
    "nextra",
    "markdown-to-html",
    "md-to-html",
    "pdf",
    "md-to-pdf",
    "markdown-to-pdf",
    "html-to-pdf"
  ],
  "scripts": {
    "start": "node --import tsx src/bin/cli.ts",
    "build": "node --import tsx src/bin/build.ts",
    "test": "npx eslint src --quiet && node --import tsx src/bin/test.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@stylistic/eslint-plugin": "^2.6.2",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.10",
    "@types/shelljs": "^0.8.15",
    "@types/yargs": "^17.0.32",
    "eslint": "^9.12.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1"
  },
  "dependencies": {
    "colors": "^1.4.0",
    "fs-extra": "^11.2.0",
    "highlight.js": "^11.10.0",
    "html-entities": "^2.5.2",
    "marked": "^15.0.4",
    "marked-alert": "^2.0.1",
    "marked-directive": "^1.0.5",
    "marked-gfm-heading-id": "^4.0.0",
    "marked-highlight": "^2.1.3",
    "puppeteer-core": "^24.1.1",
    "yargs": "^17.7.2"
  }
}
